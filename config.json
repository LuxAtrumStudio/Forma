{
  "CXX": "clang++",
  "CC": "clang",
  "CCIGNORE": "",
  "CXXIGNORE": "",
  "CCFLAGS": ["-fPIC -Wall -Wpedantic --static"],
  "CXXFLAGS": ["-std=c++17", "-fPIC", "-Wall", "-Wpedantic", "--static"],
  "LINK": "-lglfw3 -lGL -lX11 -lpthread -lXrandr -lXi -ldl",
  "source": "src",
  "include_dir": "include",
  "include": [],
  "build": "build",
  "forma.exe": {
    "path": "forma.exe",
    "files": "$(SOURCE)/main.cpp",
    "dep": ["libforma.a"],
    "group": "main",
    "type": "exe"
  },
  "libforma.a": {
    "path": "$(BUILD)/libforma.a",
    "files_exclude": "$(SOURCE)/main.cpp",
    "files": "$(SOURCE)/*.cpp",
    "type": "lib"
  }
}
